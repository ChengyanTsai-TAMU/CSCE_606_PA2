<%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>

<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "title", "Title" %></th>
      <th><%= sortable "rating", "Rating" %></th>
      <th><%= sortable "release_date", "Release Date" %></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>

      <%= render partial: 'movie', locals: { movie: movie } %>

    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td colspan="4">
        <strong>Total Movies: <%= @movies.count %></strong>
      </td>
    </tr>
  </tfoot>
</table>

<%= link_to "New movie", new_movie_path %>
